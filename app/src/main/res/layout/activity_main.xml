<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="anotherm4.idcard.MainActivity">

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/et_hint"
        android:inputType="number"
        android:maxLength="18" />
    <Button
        android:id="@+id/btn_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnInfo"
        android:text="@string/info" />

    <Button
        android:id="@+id/btn_leak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnLeak"
        android:text="@string/leak" />

    <Button
        android:id="@+id/btn_loss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnLoss"
        android:text="@string/loss" />

    <ProgressBar
        android:id="@+id/pg_process"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />
    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
